set resource access rights 'p1', 'p2';
create policy class 'department';
create user attribute 'ua1' in 'department';
create user attribute 'ua2' in 'department';
create object attribute 'oa1' in 'department';
create object 'o1' in 'oa1';
create user 'u2' in 'ua2';
create user 'u1' in 'ua1';
associate 'ua1' and 'oa1' with ['p1'];
associate 'ua2' and 'oa1' with ['p2'];
create prohibition "u2-prohibition-o1-[\p1\]"
deny user "u2"
access rights ["p1"]
on union of "o1";
